########################################################################
## SPLASH SCREEN
########################################################################
MDScreen:
    # Set sc screen name
    name: "SplashScreen"
    # Start the progress bar animation when the screen is active
   
    MDBoxLayout:
        # Add float layout
        MDFloatLayout:
            # Add Gif image
            Image:
                source:'assets/jj.jpg'
                allow_stretch: True
                anim_delay: 0
                # anim_loop: 1
                anim_reset: True
                size_hint_y: 1.2

            # Add box layout
            BoxLayout:
                # Set box position
                pos_hint:{'center_y': .6, 'center_x': .5}
                padding: "10dp"
                # set width to 70%
                size_hint_x: .7
                
               
